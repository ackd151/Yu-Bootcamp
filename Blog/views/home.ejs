<% layout('layouts/boilerplate') %>
<div class="page">
  <h1>Blog Home</h1>
  <p class="content"><%= content %></p>

  <div class="posts">
    <h2>Posts</h2>
    <!-- prettier-ignore -->
    <% if (posts) { %> 
      <% for (let post of posts) { %>
    <div class="post">
      <h3><%= post.title %></h3>
      <p>
        <%= post.text.substring(0, 100).trim() + '...' %><a
          href="/posts/<%=post.title%>"
          class="read-more"
          >Read more <span class="hide">&rarr;</span>
        </a>
      </p>
    </div>
    <% } %>
    <!--prettier-ignore  -->
    <% } %>
  </div>
</div>
